<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/category_routing_title">

        <ListPreference
            android:key="@string/distance_units_key"
            android:title="@string/distance_units_title"
            android:entries="@array/distance_units_entries"
            android:entryValues="@array/distance_units_values"
            android:defaultValue="@string/distance_units_default" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/category_debug_title">

        <CheckBoxPreference
            android:key="@string/checkbox_mock_location_key"
            android:summary="@string/checkbox_mock_location_summary"
            android:title="@string/checkbox_mock_location_title" />

        <EditTextPreference
            android:defaultValue="@string/edittext_mock_location_default_value"
            android:dialogTitle="@string/edittext_mock_location_dialog_title"
            android:key="@string/edittext_mock_location_key"
            android:summary="@string/edittext_mock_location_summary"
            android:title="@string/edittext_mock_location_title" />

        <CheckBoxPreference
            android:key="@string/checkbox_mock_route_key"
            android:summary="@string/checkbox_mock_route_summary"
            android:title="@string/checkbox_mock_route_title" />

        <EditTextPreference
            android:defaultValue="@string/edittext_mock_route_default_value"
            android:dialogTitle="@string/edittext_mock_route_dialog_title"
            android:key="@string/edittext_mock_route_key"
            android:summary="@string/edittext_mock_route_summary"
            android:title="@string/edittext_mock_route_title" />

    </PreferenceCategory>

</PreferenceScreen>
