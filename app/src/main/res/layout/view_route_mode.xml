<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/footer_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <com.mapzen.erasermap.view.MapListToggleButton
            android:id="@+id/map_list_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:src="@drawable/ic_list" />

        <ImageView
            android:id="@+id/route_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="16dp"
            android:src="@drawable/ic_cancel" />

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/map_list_toggle"
            android:layout_toLeftOf="@id/route_cancel"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/footer_padding">

            <com.mapzen.erasermap.view.DistanceView
                android:id="@+id/destination_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_medium_2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/footer_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_tiny"
                android:textStyle="bold"
                android:text="@string/diamond_separator" />

            <TextView
                android:id="@+id/destination_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_medium_2"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/footer_wrapper"
        android:background="@drawable/thin_gray_divider" />

    <android.support.v4.view.ViewPager
        android:id="@+id/instruction_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pager_height"
        android:layout_below="@id/divider_1"
        android:keepScreenOn="true" />

    <View
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/instruction_pager"
        android:background="@drawable/thin_gray_divider" />

    <com.mapzen.erasermap.view.MuteView
        android:id="@+id/route_mode_mute_view"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@id/instruction_pager"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        tools:ignore="RtlHardcoded" />

    <com.mapzen.erasermap.view.CompassView
        android:id="@+id/route_mode_compass_view"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@id/route_mode_mute_view"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_compass"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/resume"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/osm_attribution"
        android:layout_marginBottom="@dimen/padding_vertical"
        android:layout_marginRight="@dimen/padding_horizontal_default"
        android:text="@string/resume"
        android:visibility="gone"
        android:textColor="@color/dark_gray"
        android:background="@drawable/bg_route_header"/>

    <TextView
        android:id="@+id/osm_attribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/padding_vertical_big"
        android:layout_marginRight="@dimen/padding_horizontal_default"
        android:text="@string/osm_attribution"
        android:textSize="@dimen/font_tiny" />

    <com.mapzen.erasermap.view.DirectionListView
        android:id="@+id/direction_list_vew"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider_1"
        android:background="@android:color/white"
        android:visibility="gone" />

</RelativeLayout>
